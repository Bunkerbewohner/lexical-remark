{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noEmit": false,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
  ],
  "typedocOptions": {
    "logLevel": "Verbose"
  },
  "ts-node": {
    "transpileOnly": true
  }
}
