{
  "name": "lexical-remark",
  "description": "This package contains Markdown helpers and functionality for Lexical using remark-parse.",
  "keywords": [
    "lexical",
    "editor",
    "rich-text",
    "markdown",
    "remark",
    "remark-parse"
  ],
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "test:preview": "vite preview --outDir html --open",
    "prepublish": "npm run build"
  },
  "license": "MIT",
  "version": "0.0.4",
  "main": "./lib/lexical-remark.umd.js",
  "module": "./lib/lexical-remark.es.js",
  "types": "./lib/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/lexical-remark.es.js",
      "require": "./lib/lexical-remark.umd.js"
    }
  },
  "peerDependencies": {
    "@lexical/code": "0.x",
    "@lexical/link": "0.x",
    "@lexical/list": "0.x",
    "@lexical/react": "0.x",
    "@lexical/rich-text": "0.x",
    "lexical": "0.x"
  },
  "type": "module",
  "dependencies": {
    "remark-parse": "^10.0.1",
    "remark-stringify": "^10.0.2",
    "unified": "^10.1.2",
    "zwitch": "^2.0.4"
  },
  "devDependencies": {
    "@lexical/headless": "^0.10.0",
    "@vitest/ui": "^0.31.0",
    "jsdom": "^22.0.0",
    "mdast": "^3.0.0",
    "vite": "^4.3.5",
    "vite-dts": "^1.0.4",
    "vite-plugin-dts": "^2.3.0",
    "vitest": "^0.31.0"
  }
}
